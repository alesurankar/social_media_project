{
  "name": "social_media_project",
  "private": true,
  "packageManager": "pnpm@10.30.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "server"
  ],
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile dev",
    "dev:server": "pnpm --filter server dev",
    "dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:mobile\" \"pnpm run dev:server\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
